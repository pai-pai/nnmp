<!DOCTYPE html>
<html>
    <head>
        <title>
            <% if @title %>
                <%= @title %> |
            <% end %>
            <%= t('shared.dashboard.common.title') %>
        </title>
        <%= stylesheet_link_tag    "application", :media => "all" %>
        <%= javascript_include_tag "application" %>
        <%= csrf_meta_tags %>
    </head>
    <body>
        <%= render "dashboard/shared/top_nav" %>

        <div class="container-fluid dashboard">
            <div class="row-fluid">
                <div class="span3 left-column">
                    <%= render "dashboard/shared/menu" %>
                </div>
                <div class="span9 right-column">
                    <%= yield %>
                </div>
            </div>
        </div>

    </body>
</html>

