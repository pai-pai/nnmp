<!DOCTYPE html>
<html>
    <head>
        <title>
            <% if @title %>
                <%= @title %> |
            <% end %>
            <%= t('shared.common.title') %>
        </title>
        <%= stylesheet_link_tag    "application", :media => "all" %>
        <%= javascript_include_tag "application" %>
        <meta charset="utf-8" />
        <%= csrf_meta_tags %>
    </head>
    <body>
        <% if signed_in? %>
            <%= render "shared/user_bar" %>
        <% end %>
        <%= yield %>
        <div id="wait"></div>
    </body>
</html>
