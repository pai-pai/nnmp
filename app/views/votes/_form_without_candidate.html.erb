<%= form_for @vote do |f| %>
    <% if !@vote.errors.blank? %>
        <ul>
            <% @vote.errors.full_messages.each do |msg| %>
                <li><%= raw msg %></li>
            <% end %>
        </ul>
    <% end %>

    <div class="control-group">
        <%= f.label :fam_name %>
        <%= f.text_field :fam_name %>
    </div>

    <div class="control-group">
        <%= f.label :first_name %>
        <%= f.text_field :first_name %>
    </div>

    <div class="control-group">
        <%= f.label :sec_name %>
        <%= f.text_field :sec_name %>
    </div>

    <div class="control-group">
        <%= f.label :nomination_id %>
        <%= f.collection_select(:nomination_id, Nomination.order("name").all, :id, :name, { :include_blank => true }) %>
    </div>

    <hr />

    <div class="control-group">
        <%= f.label :org_id %>
        <%= f.grouped_collection_select(:org_id, Area.order("id").all, :orgs, :name, :id, :name, { :include_blank => true }) %>
    </div>

    <div class="control-group">
        <%= f.label :unit_id %>
        <%= f.grouped_collection_select(:unit_id, Org.order("area_id").all, :units, :name, :id, :name, { :include_blank => true }) %>
    </div>

    <div class="control-group">
        <%= f.label :depart %>
        <%= f.text_field :depart %>
    </div>

    <div class="control-group">
        <%= f.label :ward %>
        <%= f.text_field :ward %>
    </div>

    <hr />

    <div class="control-group">
        <%= f.label :comment %>
        <%= f.text_area :comment %>
    </div>

    <hr />

    <div class="control-group">
        <%= f.label :voter_fio %>
        <%= f.text_field :voter_fio %>
    </div>

    <div class="control-group">
        <%= f.label :voter_phone %>
        <%= f.text_field :voter_phone %>
    </div>

    <div class="control-group buttons-group" %>
        <%= f.submit "Send", { :class => "btn-primary btn" } %>
        <%= submit_tag "Cancel", { :name => "cancel_button", :class => "btn" } %>
    </div>
<% end %>
